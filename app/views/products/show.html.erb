<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Model number:</strong>
  <%= @product.model_number %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Primary photo:</strong>
  <%= @product.primary_photo_id %>
</p>

<hr>

<% @product.product_variants.each do |pv| %>
  <p>
    <strong>Product Variant:</strong>
    <%= pv.options %>
  </p>

  <p>
    <strong>Variant Number:</strong>
    <%= pv.product_variant_number %>
  </p>
<% end %>

<hr>

<h2>Add a Variant:</h2>
<%= form_for([@product, @product.product_variants.build]) do |f| %>
  <p>
    <%= f.label :options %><br>
    <%= f.text_field :options %>
  </p>
  <p>
    <%= f.label :product_variant_number %><br>
    <%= f.text_area :product_variant_number %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
